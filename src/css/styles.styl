// Add some modules
@require './modules/base.styl'
@require './modules/leaflet-1.3.1.styl'

#map
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  background-color #fff

// markers
.marker-icon
  border-radius 50%
  background-color #ccc
  width 50px
  height @width
  opacity .9
.marker-icon,
#legend li > span
  border 1px solid #000

.marker-icon,
#legend > span,
  &.group-0,
  &.group-6
    background-color #f0c
  &.group-1,
  &.group-7
    background-color #fc0
  &.group-2,
  &.group-8
    background-color #0fc
  &.group-3,
  &.group-9
    background-color #0cf
  &.group-4,
  &.group-10
    background-color #cf0
  &.group-5,
  &.group-11
    background-color #0cf

.popup-banner
  position absolute
  top 0
  left 0
  right 0
  padding-left 7px
  font-style italic
  // border 1px solid #ccc
  // border-bottom none
.popup-title
  padding-top 17px
  font-weight bold
.popup-address
  margin-top 7px
  line-height 16px

.leaflet-popup-content-wrapper
  border-radius 0
  border 1px solid #ccc
  border-bottom none
  pointer-events none
.leaflet-popup-content
  margin 8px
.leaflet-popup-close-button
  display none

// legend
#legend
  position absolute
  top 14px
  right 14px
  width 200px
  background-color #fff
  border 1px solid #000
  z-index 999
  list-style none
  margin 0
  padding 7px
  font-size 14px
  li
    width 100%
    span,
    &:after
      display inline-block
    span
      border-radius 50%
      width 10px
      height @width
      margin-right 7px
    &:after
      content attr(data-group)
